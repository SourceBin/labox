{
  "type": "object",
  "required": ["name", "entrypoint", "execute"],
  "properties": {
    "name": {
      "type": "string"
    },

    "entrypoint": {
      "type": "string"
    },

    "install": {
      "type": "object",
      "properties": {
        "depends": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },

        "packages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },

        "setup": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },

    "execute": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["run"],
        "properties": {
          "name": {
            "type": "string"
          },

          "compile": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },

          "run": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },

      "if": {
        "minItems": 2
      },
      "then": {
        "items": {
          "required": ["name"]
        }
      }
    },

    "format": {
      "type": "object",
      "required": ["command"],
      "properties": {
        "command": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
